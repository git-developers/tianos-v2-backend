{% extends 'base.html.twig' %}

{% block title %}Like index{% endblock %}

{% block body %}
    <h1>Like index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for like in likes %}
            <tr>
                <td>{{ like.id }}</td>
                <td>{{ like.comment }}</td>
                <td>
                    <a href="{{ path('like_show', {'id': like.id}) }}">show</a>
                    <a href="{{ path('like_edit', {'id': like.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('like_new') }}">Create new</a>
{% endblock %}
